<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Activities.InfoPage">

    <LinearLayout
        android:id="@+id/loaderBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"

        android:visibility="gone">

        <pl.droidsonroids.gif.GifImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/loader" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dimen_80">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50"
                android:background="@color/black"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/BackArrow"
                    android:layout_width="@dimen/dimen_40"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:tint="@color/white"
                        app:srcCompat="@mipmap/back" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="@color/black"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/Home"
                        android:layout_width="@dimen/dimen_40"
                        android:layout_height="@dimen/dimen_40"
                        android:layout_marginRight="@dimen/dimen_10"

                        android:gravity="center">

                        <ImageView

                            android:layout_width="@dimen/dimen_30"
                            android:layout_height="@dimen/dimen_30"
                            android:layout_marginTop="@dimen/dimen_5"
                            android:tint="@color/bt1"
                            app:srcCompat="@drawable/homee" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/line2"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/listSubCategory"
                android:layout_marginTop="@dimen/dimen_5"
                android:background="#c0c0c0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:layout_below="@+id/discountLL"
                    android:id="@+id/discountHv"
                    android:scrollbars="none" >

                    <LinearLayout
                        android:id="@+id/id_gallery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </HorizontalScrollView>


                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone"

                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_30"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:drawableLeft="@mipmap/location"
                    android:fontFamily="@font/poppins_extrabold"
                    android:gravity="top"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/gray"
                    android:textSize="@dimen/dimen_15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:gravity="right">


                    <ImageView
                        android:id="@+id/iv_share"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="@dimen/dimen_10"
                        android:drawableLeft="@mipmap/like_white"
                        android:gravity="top"
                        android:singleLine="true"
                        android:text=""
                        android:tint="@color/white"
                        android:src="@drawable/share"
                        android:textColor="@color/white"
                        android:adjustViewBounds="true"
                        android:textSize="@dimen/dimen_15"
                        android:visibility="visible" />
                    <ImageView
                        android:id="@+id/iv_web"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="@dimen/dimen_10"
                        android:drawableLeft="@mipmap/like_white"
                        android:gravity="top"
                        android:singleLine="true"
                        android:text=""
                        android:src="@drawable/web"
                        android:textColor="@color/white"
                        android:adjustViewBounds="true"
                        android:textSize="@dimen/dimen_15"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/iv_call"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:src="@drawable/call"
                        android:adjustViewBounds="true"
                        android:visibility="visible" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"

                android:layout_marginLeft="@dimen/dimen_20"
                android:fontFamily="@font/poppins_extrabold"
                android:gravity="top"
                android:singleLine="true"

                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_20"

                />

            <TextView

                android:id="@+id/discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dimen_20"
                android:fontFamily="@font/poppins_regular"

                android:gravity="top"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/bt1"
                android:textSize="@dimen/dimen_20"
                android:visibility="gone" />

            <TextView
                android:id="@+id/discount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dimen_20"
                android:fontFamily="@font/poppins_regular"
                android:gravity="top"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/bt1"
                android:textSize="@dimen/dimen_20" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_10"
                android:fontFamily="@font/poppins_light"
                android:gravity="top"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_20" />


            <TextView
                android:id="@+id/Website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_10"
                android:fontFamily="@font/poppins_light"
                android:gravity="top"
                android:text="www.google.com"
                android:textColor="@color/bt1"
                android:textSize="@dimen/dimen_20"
                android:visibility="gone" />


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/GetDiscount"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_30"
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_marginBottom="@dimen/dimen_20"
        android:background="@drawable/curved_bg_small_two"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/GetDiscount"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_20"
            android:textStyle="bold"
            app:fontFamily="@font/montserrat_medium" />

        <TextView
            android:id="@+id/discCode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/GetDiscount"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_20"
            android:textStyle="bold"
            android:visibility="gone"
            app:fontFamily="@font/montserrat_medium" />

    </RelativeLayout>
</RelativeLayout>